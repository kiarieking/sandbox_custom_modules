<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_fuel_report_wizard" model="ir.ui.view">
        <field name="model">partner.fuel.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="date_start"/>
                    </group>
                    <group>
                        <field name="date_end"/>
                    </group>
                    <group>
                        <field name="carrier_id" options='{"always_reload": True, "no_open": True,"no_create": 1, "no_create_edit": 1}'/>
                    </group>
                </group>
                <footer>
                    <button name="get_values" string="Generate Report"
                            type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!--Menu Item-->

    <!-- <act_window
        id="action_fuel_report_wizard"
        res_model="partner.fuel.wizard"
        name="Fuel Report"
        view_mode="form"
        target="new"
    /> -->
    <record id="action_fuel_report_wizard" model="ir.actions.act_window">
        <field name="name">Fuel Report</field>
        <field name="res_model">partner.fuel.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <!-- <field name="view_id" ref=""/> -->
        <field name="target">new</field>
    </record>

    <menuitem 
        name="Fuel Ledger"
        id="fuel_ledger_menu"
        parent="fuel_reports_menu"
        action="action_fuel_report_wizard"
        sequence="7"
    />

</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_billing_order_filter" model="ir.ui.view">
        <field name="name">billing.order.filter</field>
        <field name="model">billing.order</field>
        <field name="arch" type="xml">
            <search string="Billing Orders">
                <field name="name" string="Orders" 
                    filter_domain="['|', '|', '|', '|',('name', 'ilike', self), ('partner_id', 'ilike', self), 
                    ('vehicle_id.license_plate', 'ilike', self), ('client_id','ilike',self), ('reference_number', 'ilike', self)]"
                />
                <separator/>
                  <filter string="Quotation" name="draft" domain="[('status','=','draft')]"/>
                  <filter string="Invoiced" name="posted" domain="[('status','=','posted')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="status" domain="[]" context="{'group_by':'status'}"/>
                    <filter string="Vendor" name="partner_id" domain="[]" context="{'group_by':'partner_id'}"/>
                </group>
           </search>
        </field>
    </record>

    <record id="billing_order_tree" model="ir.ui.view">
        <field name="name">billing.order.tree</field>
        <field name="model">billing.order</field>
        <field name="arch" type="xml">
            <tree decoration-muted="status=='cancel'" multi_edit="1">
                <field name="name"/>
                <field name="date_billing" readonly="1"/>
                <field name="partner_id" readonly="1"/>
                <field name="reference_number" readonly="1"/>
                <field name="client_id" readonly="1"/>
                <field name="create_date"/>
                <field name="create_uid"/>
                <field name="write_date"/>
                <field name="write_uid"/>
                <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                <field name="currency_id" invisible="1" />
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="billing_order_form" model="ir.ui.view">
            <field name="name">billing.order.form</field>
            <field name="model">billing.order</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                      <button name="action_confirm" type="object" attrs="{'invisible': [('status','not in', 'draft')]}" string="Confirm" groups="base.group_user"/>
                      <button name="action_post" type="object" attrs="{'invisible': [('status','not in', 'order')]}" class="btn-primary" string="Post" groups="base.group_user" />
                      <button name="action_cancel" type="object" string="Cancel" attrs="{'invisible': [('status','not in', ('draft','order'))]}" groups="base.group_user"/>
                      <button name="action_reset" type="object" attrs="{'invisible': [('status','not in', ('order','cancel'))]}" string="Reset to draft" groups="base.group_user" />
                        <field name="status" widget="statusbar"/>
                    </header>
                    <sheet>
                     <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group name="group_top">
                        <group name="group_left">
                            <field  attrs="{'readonly': [('status', 'in', ('cancel', 'posted'))]}" name="partner_id" widget="res_partner_many2one" context="{'res_partner_search_mode': 'customer', 'show_address': 1, 'show_vat': True}" options='{"always_reload": True, "no_open": True,"no_create": 1, "no_create_edit": 1}'/>
                            <field name="vehicle_id" options='{"always_reload": True, "no_open": True,"no_create": 1, "no_create_edit": 1}'/>
                             <!-- <field name="billing_type"/> -->
                            <field name="reference_number"/>
                        </group>
                        <group name="group_right">
                            <field name="client_id"/>
                            <field name="date_billing"  attrs="{'readonly': [('status', 'in', ('cancel', 'posted'))]}"/>
                            <field name="payment_term_id"  attrs="{'readonly': [('status', 'in', ('cancel', 'posted'))]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="order_lines" string="Orders">
                            <field
                                name="order_line"
                                widget="section_and_note_one2many"
                                edit="true"
                                attrs="{'readonly': [('status', 'in', ('cancel', 'posted'))]}"
                            >
                                <tree create="true" delete="true" editable="bottom">
                                    <field
                                        name="product_id"
                                        options='{"always_reload": True, "no_open": True,"no_create": 1, "no_create_edit": 1}'
                                    />
                                    <field name="name"/>
                                    <field name="notes"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="amount_subtotal"/>
                                </tree>
                            </field>

                             <group name="note_group" col="6">

                                <group class="oe_subtotal_footer oe_right" colspan="2">
                                    <field name="amount_total" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                        <label for="amount_total" />
                                    </div>
                                    <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                    <field name="currency_id" invisible="1" />
                                </group>
                                <div class="oe_clear"/>
                            </group>
                        </page>
                    </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="billing_menu_action" model="ir.actions.act_window">
            <field name="name">Quotations</field>
            <field name="res_model">billing.order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[('status', '!=', 'posted')]</field>
            <field name="search_view_id" ref="view_billing_order_filter"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new billing quotation
                </p><p>
                    You must define a product for everything you bill,
                    whether it's a storable product, a consumable or a service.
                </p>
            </field>
        </record>

        <record id="action_orders" model="ir.actions.act_window">
            <field name="name">Invoiced Bills</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">billing.order</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_billing_order_filter"/>
            <field name="context">{}</field>
            <field name="domain">[('status', 'not in', ('draft', 'cancel'))]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new quotation, the first step of a new bill!
                </p><p>
                    Once the quotation is confirmed and invoiced, it becomes an invoiced bill.<br/>
                </p>
            </field>
        </record>

            <!-- Top menu item -->

        <menuitem name="Billing" id="billing_menu" web_icon="quatrix_billing_module,static/description/icon.png"/>

        <!-- menu categories -->
        <menuitem name="Bill Quotations" id="quotations_menu" parent="billing_menu" action="billing_menu_action" sequence="2"/>
        <menuitem name="Invoiced Bills" id="orders_menu" parent="billing_menu" action="action_orders" sequence="5"/>
        <menuitem name="Billing Reports" id="billing_reports_menu" parent="billing_menu" sequence="6"/>
    </data>
</odoo>
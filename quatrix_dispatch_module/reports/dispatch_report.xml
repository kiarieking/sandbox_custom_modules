<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="dispatch_report">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure"/>

                    <h2 class="mt16">
                        <span >Dispatch Report </span>
                    </h2>

                    <div class="row mt32 mb32" id="informations">
                        <div class="col-auto mw-100 mb-2">
                            <strong>From Date:</strong>
                            <t t-esc="date_start" t-options='{"widget": "date"}'/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>To Date:</strong>
                            <t t-esc="date_end" t-options='{"widget": "date"}' />
                        </div>
                    </div>


                    <table class="table table-sm o_main_table">
                        <thead>
                            <tr>
                                <th name="th_description" class="text-left">Date</th>
                                <th name="th_description" class="text-left">Customer</th>
                                <th name="th_description" class="text-left">Vehicle</th>
                                <th name="th_description" class="text-left">Route</th>
                                <th name="th_description" class="text-right">Reference</th>
                                <!-- <th name="th_description" class="text-left">Rate</th> -->
                            </tr>
                        </thead>
                        <tbody class="sale_tbody">
                            <t t-set="current_subtotal" t-value="0"/>

                            <t t-foreach="order_ids" t-as="doc">
                                <tr>
                                    <td name="td_name"><span t-esc="doc['date']"/></td>
                                    <td name="td_name"><span t-esc="doc['customer']"/></td>
                                    <td name="td_name"><span t-esc="doc['vehicle']"/></td>
                                    <td name="td_name"><span t-esc="doc['route']"/></td>
                                    <td name="td_name"><span t-esc="doc['reference']"/></td>
                                    <!-- <td name="td_quantity" class="text-right">
                                        <span t-esc="'{0:,.2f}'.format(float(doc['amount_total']))" />
                                    </td> -->
                                    <t t-set="current_section" t-value="line"/>
                                    <t t-set="current_subtotal" t-value="0"/>       
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
<?xml version="1.0"?>
<odoo>
    <record id="module_quatrix_category" model="ir.module.category">
        <field name="name">Dispatch Management</field>
        <field name="sequence">40</field>
    </record>

    <record id="group_quatrix_admin" model="res.groups">
        <field name="name">Admin</field>
        <field name="category_id" ref="quatrix_dispatch_module.module_quatrix_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user')), (4, ref('fleet.fleet_group_user'))]"/>
    </record>
    <record id="group_quatrix_finance" model="res.groups">
        <field name="name">Finance</field>
        <field name="category_id" ref="quatrix_dispatch_module.module_quatrix_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>
    <record id="group_quatrix_manager" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="quatrix_dispatch_module.module_quatrix_category"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_tonnage_revenue_cost_wizard" model="ir.ui.view">
        <field name="model">tonnage.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="date_start"/>
                    </group>
                    <group>
                        <field name="date_end"/>
                    </group>
                </group>
                <footer>
                    <button name="get_values" string="Print Statement"
                            type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!--Menu Item-->

    <!-- <act_window
        id="action_tonnage_report_wizard"
        res_model="tonnage.report.wizard"
        name="Tonnage Report"
        view_mode="form"
        target="new"
    /> -->

    <record id="action_tonnage_report_wizard" model="ir.actions.act_window">
        <field name="name">Tonnage Report</field>
        <field name="res_model">tonnage.report.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <!-- <field name="view_id" ref=""/> -->
        <field name="target">new</field>
    </record>

    <!-- Dispatch Report - Accounting Team -->
    <menuitem
        name="Tonnage Report"
        id="tonnage_report_menu"
        parent="quatrix_dispatch_module.dispatch_reports_menu"
        action="action_tonnage_report_wizard"
        sequence="400"
    />
</odoo>
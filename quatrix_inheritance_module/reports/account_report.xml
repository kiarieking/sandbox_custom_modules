<?xml version="1.0" encoding="utf-8"?>
  <odoo>
    <data>
        <template id="report_account_invoice_document_inherit" inherit_id="account.report_invoice_document">

        <xpath expr="//div[hasclass('page')]/div[@id='informations']" position="inside">
            <div t-if="o.certificate_number" class="col-auto mw-100 mb-2" >
                <strong>Certificate Number:</strong>
                <p class="m-0" t-field="o.certificate_number"/>
            </div>
        </xpath>

        <xpath expr="//table[hasclass('o_main_table')]" position="replace"><!--table table-sm -->
            <table class="table table-sm o_main_table" name="invoice_line_table">
                <thead>
                    <tr>
                        <t t-set="colspan" t-value="6"/>
                        <th name="th_description" class="text-left" style="font-size:14.5px"><span>Date</span></th>
                        <th name="th_description" class="text-left" style="font-size:14.5px"><span>Product</span></th>
                        <th name="th_description" class="text-left" style="font-size:14.5px"><span>Delivery No</span></th>
                        <th name="th_description" class="text-left" style="font-size:14.5px"><span>Description</span></th>
                        <th name="th_description" class="text-left" style="font-size:14.5px"><span>Lines</span></th>
                        <th name="th_quantity" class="text-right" style="font-size:14.5px"><span>Quantity</span></th>
                        <th name="th_priceunit" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Value</span></th>
                    </tr>
                </thead>


                <tbody class="invoice_tbody">
                            <t t-set="current_subtotal" t-value="0"/>
                            <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.dates, l.move_name, -l.id), reverse=True)"/>

                            <t t-foreach="lines" t-as="line">
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                        <td name="account_invoice_line_name" style="font-size:12.5px"><span t-field="line.dates" t-options="{'widget': 'text'}"/></td>
                                        <td name="account_invoice_line_name" style="font-size:12.5px"><span t-field="line.product_id.name" t-options="{'widget': 'text'}"/></td>
                                        <td name="account_invoice_line_name" style="font-size:12.5px"><span t-field="line.order_no" t-options="{'widget': 'text'}"/></td>
                                        <td name="account_invoice_line_name" style="font-size:12.5px"><span t-field="line.name" t-options="{'widget': 'text'}"/></td>
                                        <td name="account_invoice_line_name" style="font-size:12.5px"><span t-field="line.notes" t-options="{'widget': 'text'}"/></td>
                                        <td class="text-right" style="font-size:12.5px">
                                            <span t-esc="'{0:,.1f}'.format(float(line.quantity))"/>
                                            <span t-field="line.product_uom_id"  groups="uom.group_uom"/>
                                        </td>
                                        <td style="font-size:12.5px" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span class="text-nowrap" t-field="line.price_subtotal"/>
                                        </td>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td colspan="99">
                                            <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                        </td>
                                        <t t-set="current_section" t-value="line"/>
                                        <t t-set="current_subtotal" t-value="0"/>
                                    </t>
                                    <t t-if="line.display_type == 'line_note'">
                                        <td colspan="99">
                                            <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                        </tbody>
                </table>
            </xpath>

            <xpath expr="//table[hasclass('o_main_table')]" position="after"><!--table table-sm -->
                <!-- Deduction Lines Table -->
                <div t-if="o.deduction_line_ids" class="row mt32 mb32" id="informations">
                    <div class="col-auto mw-100 mb-2">
                        <strong></strong>
                    </div>
                </div>

                    <table t-if="o.deduction_line_ids"  class="table table-sm o_main_table">
                        <div class="row mt32 mb32" id="informations">
                            <div class="col-auto mw-100 mb-2">
                                <strong>Deductions/Payable Sections</strong>
                            </div>
                        </div>
                        <thead>
                            <tr>
                                <t t-set="colspan" t-value="4"/>
                                <th name="th_description" class="text-left" style="font-size:14.5px"><span>Date</span></th>
                                <th name="th_description" class="text-left" style="font-size:14.5px"><span>Document Ref</span></th>
                                <th name="th_description" class="text-left" style="font-size:14.5px"><span>Description</span></th>
                                <th name="th_description" class="text-right" style="font-size:14.5px"><span>Invoice Amount</span></th>
                                <th name="th_description" class="text-right" style="font-size:14.5px"><span>Amount Deducted</span></th>
                                <!-- <th name="th_priceunit" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Value</span></th> -->
                            </tr>
                        </thead>

                        <t t-set="current_subtotal" t-value="0"/>
                            <t t-set="lines" t-value="o.deduction_line_ids.sorted(key=lambda l: (l.date_deduction, -l.id), reverse=True)"/>
                            <t t-foreach="lines" t-as="line">
                                <tr>
                                    <t  name="account_invoice_line_accountable"> 
                                        <!-- t-if="not line.display_type" -->
                                        <td name="account_invoice_line_name" style="font-size:12.5px"><span t-field="line.date_deduction" t-options="{'widget': 'text'}"/></td>
                                        <td name="account_invoice_line_name" style="font-size:12.5px"><span t-field="line.invoice_to_deduct.name" t-options="{'widget': 'text'}"/></td>
                                        <td name="account_invoice_line_name" style="font-size:12.5px"><span t-field="line.description" t-options="{'widget': 'text'}"/></td>

                                        <td class="text-right" style="font-size:12.5px">
                                            <span t-esc="'{0:,.1f}'.format(float(line.amount_pending))"/>
                                        </td>
                                        <td style="font-size:12.5px" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span t-esc="'{0:,.1f}'.format(float(line.amount_to_deduct))"/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                    </table>
            </xpath>
        </template>
    </data>
</odoo>
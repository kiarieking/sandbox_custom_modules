<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_accounting_revenue_cost_wizard" model="ir.ui.view">
        <field name="model">sale.uninvoiced.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="date_start"/>
                    </group>
                    <group>
                        <field name="date_end"/>
                    </group>
                </group>
                <footer>
                    <button name="get_values" string="Print Statement"
                            type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


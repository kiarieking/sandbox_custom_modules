<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sale_uninvoiced">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure"/>

                    <h2 class="mt16">
                        <span >Uninvoiced Sales Summary Report</span>
                    </h2>

                    <div class="row mt32 mb32" id="informations">
                            <div class="col-auto mw-100 mb-2">
                                <strong>From Date:</strong>
                                <t t-esc="date_start" t-options='{"widget": "date"}'/>
                            </div>

                            <div class="col-auto mw-100 mb-2">
                                <strong>To Date:</strong>
                                <t t-esc="date_end" t-options='{"widget": "date"}' />
                            </div>
                    </div>

                    <table class="table table-sm o_main_table">
                        <thead>
                            <tr>
                                <th name="th_description" class="text-left">Customer</th>
                                <th name="th_description" class="text-left">Date Order</th>
                                <th name="th_description" class="text-left">Document #</th>
                                <th name="th_description" class="text-right">Amount Total</th>
                            </tr>
                        </thead>
                        <tbody class="sale_tbody">
                            <t t-set="current_subtotal" t-value="0"/>
                            <t t-foreach="order_ids" t-as="doc">
                                <tr>
                                    <td name="td_name"><span t-esc="doc['partner_id'][1]"/></td>
                                    <td name="td_name"><span t-esc="doc['date_order']"/></td>
                                    <td name="td_name"><span t-esc="doc['name']"/></td>
                                    <td name="td_quantity" class="text-right"> <span t-esc="'{0:,.2f}'.format(float(doc['amount_total']))" /></td>
                                    <t t-set="current_section" t-value="line"/>
                                    <t t-set="current_subtotal" t-value="0"/>       
                                </tr>
                            </t>
                        </tbody>
                    </table>


                    <div class="clearfix" name="so_total_summary">
                        <div id="total" class="row" name="total">
                            <table class="table table-sm">
                                <tr class="is-subtotal text-right">
                                    <td name="td_section_subtotal" colspan="99">
                                        <strong class="mr16">Total</strong>
                                        <span t-esc="'{0:,.2f}'.format(float(total_sales))" />
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                </div>
            </t>
        </t>
    </template>
</odoo>